# 服务器配置
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1

# 数据库配置 (MySQL 8.0+)
# 注意：请根据实际情况修改以下配置
# 如果使用宝塔面板，数据库信息可在宝塔面板->数据库中查看
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=crm_user
DB_PASSWORD=your_strong_password_here
DB_DATABASE=crm_system
DB_CHARSET=utf8mb4
DB_TIMEZONE=+08:00

# 数据库部署说明：
# 1. 运行 chmod +x db-deploy.sh && ./db-deploy.sh 进行数据库一键部署
# 2. 或手动创建数据库后导入 backend/database-init.sql
# 3. 确保MySQL版本为8.0+以获得最佳兼容性

# JWT配置
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# 加密配置
BCRYPT_ROUNDS=12

# CORS配置
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# 邮件配置
MAIL_HOST=smtp.qq.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=your_email@qq.com
MAIL_PASS=your_email_password
MAIL_FROM=CRM系统 <your_email@qq.com>

# 日志配置
LOG_LEVEL=info
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# 限流配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 安全配置
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# 宝塔面板配置
BT_PANEL_URL=https://your-server-ip:8888
BT_PANEL_USERNAME=admin
BT_PANEL_PASSWORD=your_bt_password

# 快递API配置 (快递100)
EXPRESS_API_CUSTOMER=your_express_customer_id
EXPRESS_API_KEY=your_express_api_key
EXPRESS_API_URL=https://poll.kuaidi100.com/poll/query.do
EXPRESS_API_TIMEOUT=10000

# 快递鸟API配置 (备用)
KDNIAO_API_KEY=your_kdniao_api_key
KDNIAO_CUSTOMER_ID=your_kdniao_customer_id
KDNIAO_API_URL=https://api.kdniao.com/Ebusiness/EbusinessOrderHandle.aspx