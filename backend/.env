# 服务器配置
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1

# 数据库配置 - 开发环境使用SQLite，生产环境使用MySQL
# 开发环境下这些配置会被忽略，使用SQLite
# DB_HOST=localhost
# DB_PORT=3306
# DB_USERNAME=crm_user
# DB_PASSWORD=dev_password_123
# DB_DATABASE=crm_system
# DB_CHARSET=utf8mb4
# DB_TIMEZONE=+08:00

# JWT配置
JWT_SECRET=dev_jwt_secret_key_for_testing_only
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# 加密配置
BCRYPT_ROUNDS=12

# CORS配置
CORS_ORIGIN=http://localhost:5173,http://localhost:5175
CORS_CREDENTIALS=true

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# 邮件配置
MAIL_HOST=smtp.qq.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=test@example.com
MAIL_PASS=test_password
MAIL_FROM=CRM系统 <test@example.com>

# 日志配置
LOG_LEVEL=info
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# 限流配置
RATE_LIMIT_WINDOW_MS=300000
RATE_LIMIT_MAX_REQUESTS=1000

# 安全配置
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# CORS配置
CORS_ORIGIN=http://localhost:5173,http://localhost:5174
CORS_CREDENTIALS=true

# 宝塔面板配置
BT_PANEL_URL=https://localhost:8888
BT_PANEL_USERNAME=admin
BT_PANEL_PASSWORD=test_password