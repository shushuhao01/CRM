# 本地开发环境配置
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1

# 数据库配置 (SQLite for 本地开发)
DB_TYPE=sqlite
DB_DATABASE=./data/crm_dev.db

# JWT配置
JWT_SECRET=Local_Development_JWT_Secret_Key_2025
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# 日志配置
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# CORS配置
CORS_ORIGIN=http://localhost:5173

# 文件上传配置
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# 邮件配置 (开发环境可选)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# 短信配置 (开发环境可选)
SMS_ACCESS_KEY=
SMS_SECRET_KEY=
SMS_SIGN_NAME=
SMS_TEMPLATE_CODE=